@{
  Layout = "_Layout";
}

@model Flavor
<div class="text-center">

  <h1>Are you sure you want to delete <span class="red">@Model.name</span>?</h1>
  <hr class="my-4">
  <a href="/flavor" class="btn btn-warning">Cancel</a>
  <form action="/flavor/delete/@Model.flavor_id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>
