@{
  Layout = "_Layout";
}

@using BestRestaurantApp.Models;

<h1>Restaurants</h1>

@if (Model.Count == 0)
{
  <p>Where them restaurants be?</p>
}
else
{
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant}", "Details", new { id = restaurant.RestaurantId})</li>
  }
}

<p>@Html.ActionLink("Add a new restaurant", "Create", "Restaurant")</p>

