@{
  Layout = "_Layout";
}

@using BestRestaurantApp.Models;
<div class="row">
  <div class="col-6">
    <h1 class="text-center">Cuisines</h1>

    @if (Model.Count == 0)
    {
      <p>No cuisines have been added yet!</p>
    }
    else
    {
      <ul class="list-group mt-4">
      @foreach (Cuisine cuisine in Model)
      {
        <li class="list-group-item text-center w-75 m-auto">@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
      }
      </ul>
    }
    <div class="w-50 m-auto mt-3">
      <a class="button btn btn-info" href="/Cuisines/create">Add new Cuisine</a>
    </div>

  </div>
  <div class="col-6">
    <form action="/restaurants/details" method="get">
        <label class="form-label" for="search">Search for a restaurant:</label>
        <input class="form-control" type="text" name="search" id="search">
        <br>
        <button class="form-control btn btn-success" type="submit">Search</button>
      </form>
  </div>
</div>
